@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Menu Len: @Program.menu.NumOfItems</h2>
<div>
    <ul>
        @foreach (var item in Program.menu.getMenu())
        {
            <h3>@item.Name</h3>
            <li>@item.Price</li>
            <li>@item.Description</li>
            <li>@item.Quantity</li>
        }
    </ul>
    <input type="button" title="Add" value="D" onclick="location.href='@Url.Action("Add", "Employee", new { id = item.ID })'" />
</div>
